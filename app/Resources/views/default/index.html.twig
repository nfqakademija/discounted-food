{% block body %}
<div class="new_arrivals_agile_w3ls_info">
   <div class="container">
        <h3 class="wthree_text_info">Available <span>Offers</span></h3>
        <div id="horizontalTab">
            <div class="row">
                <div class="col-md-12 col-sm-2 text-center">

                </div>
                <div class="resp-tabs-container">
                    {% for product in products %}
                        <div class="col-sm-4 col-md-4 col-lg-4 mt-4 product-men" style="height: 450px;margin-bottom: 50px;margin-top: 10em">
                            <div class="card">
                                {% if product.ImageName is not null %}
                                    <img style="width:360px;height:240px;" class="card-img-top img-responsive" src="{{ asset('images/products/'  ~ product.ImageName) }}">
                                {% else %}
                                    <img style="width:360px;height:240px;" class="card-img-top img-responsive" src="{{ asset('images/products/foodNoImage.jpg') }}">
                                {% endif %}
                                <div class="card-block text-center">
                                    <h4 class="card-title mt-3">{{ product.name }}</h4>
                                    <div class="meta">
                                        <a>{{ product.address.shopOwner.companyName }}
                                            Address: {{ product.address.address }}</a>
                                    </div>
                                    <div class="card-text">
                                        {{ product.description }}
                                    </div>
                                </div>
                                <div class="card-footer text-center">
                                    <small>Collection time today: <strong>{{ product.dateFrom|date("h:m") }}
                                            - {{ product.dateTo|date("h:m") }}</strong></small>
                                </div>
                                <div class="card-footer text-center">
                                    {% if product.vegan %}
                                        <button type="button" class="btn btn-success"> <span class="badge">VEGAN</span></button>
                                    {% endif %}
                                    {% if product.vegetarian %}
                                        <button type="button" class="btn btn-success"> <span class="badge">VEGETARIAN</span></button>
                                    {% endif %}
                                </div>
                                <div class="card-footer text-center">
                                    {% if product.meal %}
                                        <button type="button" class="btn btn-success"> <span class="badge">MEAL</span></button>
                                    {% endif %}
                                    {% if product.dessert %}
                                        <button type="button" class="btn btn-success"> <span class="badge">DESSERT</span></button>
                                    {% endif %}
                                </div>
                                <div class="card-footer text-center">
                                    <small>Left: <strong>{{ product.portions }}</strong> portions for: <strong><span
                                                    class="item_price">${{ product.price }}</span></strong></small>
                                    <button style="color:white;"
                                            class="btn snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                                        SHOW IN THE MAP
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
     </div>
  </div
{% endblock %}

